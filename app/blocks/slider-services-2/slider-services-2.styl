.slider
	position relative
	display block
	margin-bottom 80px
	&__title
		display flex
		justify-content center
		text-align center
		position relative
		width 372px
		height 134px
		background-image url(../images/slider-title-bg.png)
		margin 0 auto
		&-value
			align-self center
			position absolute
			font-size 93px
			font-weight 900
			text-transform uppercase
			text-shadow 0 0 26px rgba(255, 250, 126, .59)
			color #ffffff
			line-height 1
	&__content
		background-image url(../images/slider-bg.png)
		height 630px
	&__link
		display flex
		width 100%
		height 100%
		min-height 630px
		justify-content center
		align-items center
	&__image
		max-width 400px
		max-height 400px

